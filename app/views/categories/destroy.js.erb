$("#info").html("<%= escape_javascript(ts 'delete.successful', :what => @title) %>")
<% if @parent.nil? || @parent == @main_category
     categories = @main_category.children %>
     $("#navigation").html("<%= escape_javascript(render(:partial => 'index', :locals => {:margin_depth => 0, :categories => categories})) %>")
<% else 
     @category = @parent %>
     $("#node_<%= @category.id %>_div").html("<%= escape_javascript(render(:partial => 'expanded', :object => @category, :locals => {:margin_depth => @category.ancestors.size})) %>")
<% end %>
