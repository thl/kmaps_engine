<p><b>Detail for textual sources:</b></p>
<%   resource.sources.all.each do |s| %>
	   <div id="<%= "#{s.id}_sourcediv" %>">
<%     if @source.nil? 	%>	
<%=      render :partial => 'sources/contracted', :locals => {:resource => resource, :source => s} %>
<%     else %>
<%       if s == @source %>
<%=        render :partial => 'sources/expanded', :locals => {:resource => resource, :source => s, :category => category} %>
<%	     else %>
<%=        render :partial => 'sources/contracted', :locals => {:resource => resource, :source => s} %>
<%       end %>
<%     end %>
       </div>
<%   end %>