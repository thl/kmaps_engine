<h1><%= ts 'list.ing.records', :what => Blurb.model_name.human(:count => :many).titleize %></h1>
<table border="1" class="normal">
  <tr>
    <th><%= Blurb.human_attribute_name(:code).s %></th>
    <th><%= Blurb.human_attribute_name(:title).s %></th>
  </tr>
<% can_edit = authorized? hash_for_edit_blurb_path
   @blurbs.each do |blurb| %>
  <tr>
    <td><%= link_to h(blurb.code), can_edit ? edit_blurb_path(blurb) : blurb %></td>
    <td><%=h blurb.title %></td>
  </tr>
<% end %>
</table>
<p>&nbsp;<br/>
<% if authorized? hash_for_new_blurb_path %>
<%=  link_to ts('new.record', :what => Blurb.model_name.human), new_blurb_path %> |
<% end %>
<%= link_to ts('back.to', :what => t('home.for', :what => t('topical_map.this', :count => :many))), root_path %>