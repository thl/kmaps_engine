<% master = (@main_category == @category.parent) %>
   <h1><%= ts 'edit.ing.record', :what => master ? t(:master, Category.human_name.capitalize) : t(:subcategory) %></h1>
<%= error_messages_for :category %>
<% if base_language? %>
<%   remote_form_for(:category, :url => category_child_path(@main_category, @category), :before => "tinyMCE.triggerSave(); document.getElementById(\'submit_button\').disabled = true;", :html => { :method => :put }) do |f| %>
<%=    render :partial => 'form', :locals => {:changing_parent_allowed => true, :f => f, :default_curator_id => nil} %>
     <p>
<%=    globalized_submit_tag 'update.this' %>
     </p>
<%   end 
   else %>
     <h2><%= ts(LANGUAGES[I18n.default_locale][:title]) %></h2>
<%   locale = I18n.locale
     I18n.locale = I18n.default_locale %>
<%=  display_if_not_blank ts('name.for', :what => @main_category.title.titleize), h(@category.title).s %>
<%   I18n.locale = locale
     @category[:title] = @category.title %>
     <h2><%= ts(LANGUAGES[I18n.locale][:title]) %></h2>
<%   remote_form_for(:category, :url => category_child_path(@main_category, @category), :before => "document.getElementById(\'submit_button\').disabled = true;", :html => { :method => :put }) do |f| %>
     <p>
       <b><%= ts 'name.for', :what => @main_category.title.titleize %></b>
<%=    f.text_field :title, language_options %>
     </p>
     <p>
<%=    submit_tag te(:save, :what => t('translat.ion')), language_options(:disabled_with => 'Posting...') %>
     </p>
<%   end %>
<% end %>
<p><%= link_to_remote ts('cancel.record', :what => t('edit.ing.this')), :url => category_child_path(@main_category, @category), :method => 'get' %></p>