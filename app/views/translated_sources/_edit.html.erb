<%= tagged_tinymce_script %>
<% if @source.resource_type == 'Category'
     resource = Category.find(@source.resource_id)
     translated_path = category_source_translated_source_path(@category,@source,@translated_source)
     hash_destroy_path = hash_for_category_source_translated_source_path(:action => 'destroy')
   else
     resource = Description.find(@source.resource_id)
     translated_path = category_description_source_translated_source_path(@category, resource, @source ,@translated_source)
     hash_destroy_path = hash_for_category_description_source_translated_source_path(:action => 'destroy')
   end %>
<h1><%= ts(:in, :what => t(:for, :what => t('edit.ing.record', :what => TranslatedSource.human_name), :whom => "<em>#{formated_mms_pages(@source)}</em>"), :where => h(@translated_source.language.title)) %></h1>
<%= error_messages_for :translated_source %>
<% remote_form_for(:translated_source, :url => translated_path, :before => "tinyMCE.triggerSave();document.getElementById(\'submit_button\').disabled = true;", :update => 'info', :html => { :method => :put}) do |f| %>
<%= render :partial => 'translated_sources/form', :locals => {:f => f} %>
  <p>
  <div id="update_div">
  <%= submit_to_remote 'update_button','update translation', :url => translated_path, :update => 'info', :before => "tinyMCE.triggerSave();" %>
  </div> 
  </p>
<% end %>
<p>
<% authorized_only hash_destroy_path do %>
<%=  link_to_remote ts('delete.this'), :url => translated_path, :confirm => 'Are you sure?', :update => 'info', :method => :delete %> |
<% end %>
<%= link_to_remote ts('cancel.this'), :url => category_child_path(@main_category, @category), :method => :get %>
</p>