<h1><%= ts 'edit.ing.record', :what => t('topical_map.this', :count => 1) %></h1>
<%= error_messages_for :category %>
<% if base_language?
     remote_form_for(:category, :url => category_path(@category), :before => "tinyMCE.triggerSave(); document.getElementById(\'submit_button\').disabled = true;", :html => { :method => :put }) do |f| %>
	<%=    render :partial => 'form', :locals => {:changing_parent_allowed => true, :f => f, :default_curator_id => nil} %>
	<p>
<%=   globalized_submit_tag 'update.this' %>
    </p>
<%   end 
   else %>

     <h2><%= ts(LANGUAGES[I18n.default_locale][:title]) %></h2>
<%   locale = I18n.locale
     I18n.locale = I18n.default_locale %>
<%=  display_if_not_blank(Category.human_attribute_name('title').s, h(@category.title).s) %>
<%   I18n.locale = locale
     @category[:title] = @category.title %>
     <h2><%= ts(LANGUAGES[I18n.locale][:title]) %></h2>
<%   remote_form_for(:category, :url => category_path(@category), :html => { :method => :put }) do |f| %>
     <p>
       <b><%= Category.human_attribute_name('title').s %></b>
<%=    f.text_field :title, language_options %>
     </p>
     <p>
<%=    globalized_submit_tag ts('save.translate') %>
     </p>
<%   end
   end %>
<p>
<%= link_to_remote ts('cancel.record', :what => t('edit.ing.this')), :url => category_path(@category), :method => 'get' %>
</p>